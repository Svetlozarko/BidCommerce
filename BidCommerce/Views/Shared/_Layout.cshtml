@using Microsoft.AspNetCore.Identity
@using BidCommerce.Data
@inject SignInManager<ApplicationUser> SignInManager
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BidCommerce</title>
    <!-- Bootstrap + Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/layout.css" />

</head>
<body>
    <!-- Modern Navigation -->
    <nav class="modern-navbar">
        <div class="container d-flex align-items-center">
            <!-- Brand -->
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                <div class="brand-logo">
                    <i class="bi bi-bag" style="color: white; font-size: 16px;"></i>
                </div>
                <span class="brand-name">BidCommerce</span>
            </a>

            <!-- Search Bar -->
            <div class="search-container">
                <form class="search-form" asp-controller="Products" asp-action="Search" method="get">
                    <input type="search" name="query" class="search-input" placeholder="Search for anything..." aria-label="Search">
                    <button type="submit" class="search-btn">
                        <i class="bi bi-search"></i>
                    </button>
                </form>
            </div>

            <!-- Navigation Items -->
            <div class="nav-items">
                @if (SignInManager.IsSignedIn(User))
                {
                    <a asp-controller="Products" asp-action="Create" class="nav-btn btn-sell">
                        <i class="bi bi-plus"></i> Sell
                    </a>
                    <a asp-controller="Account" asp-action="Dashboard" class="nav-btn btn-dashboard">
                        Dashboard
                    </a>
                    <a asp-controller="Products" asp-action="Watchlist" class="nav-btn btn-watchlist">
                        <i class="bi bi-heart"></i> Watchlist
                    </a>
                    <form asp-area="Identity" asp-page="/Account/Logout" method="post" class="d-inline">
                        <button type="submit" class="nav-btn btn-logout" style="border: 1px solid #fecaca; background: #fef2f2;">
                            Logout
                        </button>
                    </form>
                }
                else
                {
                    <a asp-area="Identity" asp-page="/Account/Login" class="nav-btn btn-login">
                        Login
                    </a>
                    <a asp-area="Identity" asp-page="/Account/Register" class="nav-btn btn-register">
                        Register
                    </a>
                }
            </div>

        </div>
    </nav>

    <!-- Main Content -->
    <main role="main">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="footer">
        <div class="container">
            <div class="row">
                <!-- Brand Column -->
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="footer-brand">
                        <div class="footer-logo">
                            <i class="bi bi-bag" style="color: white; font-size: 20px;"></i>
                        </div>
                        <span class="footer-brand-name">BidCommerce</span>
                    </div>
                    <p class="footer-description">
                        The world's largest online auction marketplace with millions of unique items.
                    </p>
                </div>

                <!-- For Buyers Column -->
                <div class="col-lg-2 col-md-6 mb-4">
                    <h5 class="footer-title">For Buyers</h5>
                    <ul class="footer-links">
                        <li><a asp-controller="Help" asp-action="HowToBid">How to Bid</a></li>
                        <li><a asp-controller="Help" asp-action="BuyerProtection">Buyer Protection</a></li>
                        <li><a asp-controller="Help" asp-action="PaymentMethods">Payment Methods</a></li>
                    </ul>
                </div>

                <!-- For Sellers Column -->
                <div class="col-lg-2 col-md-6 mb-4">
                    <h5 class="footer-title">For Sellers</h5>
                    <ul class="footer-links">
                        <li><a asp-controller="Products" asp-action="Create">Start Selling</a></li>
                        <li><a asp-controller="Seller" asp-action="Dashboard">Seller Center</a></li>
                        <li><a asp-controller="Help" asp-action="FeesAndPricing">Fees & Pricing</a></li>
                    </ul>
                </div>

                <!-- Support Column -->
                <div class="col-lg-2 col-md-6 mb-4">
                    <h5 class="footer-title">Support</h5>
                    <ul class="footer-links">
                        <li><a asp-controller="Help" asp-action="Index">Help Center</a></li>
                        <li><a asp-controller="Home" asp-action="Contact">Contact Us</a></li>
                        <li><a asp-controller="Community" asp-action="Index">Community</a></li>
                    </ul>
                </div>
            </div>

            <div class="footer-bottom">
                <p>&copy; 2024 BidCommerce. All rights reserved.</p>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body> 
</html>