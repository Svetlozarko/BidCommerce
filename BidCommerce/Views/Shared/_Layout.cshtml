@using Microsoft.AspNetCore.Identity
@using BidCommerce.Data
@inject SignInManager<ApplicationUser> SignInManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BidCommerce</title>

    <!-- Bootstrap + Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

    <style>
        .search-box {
            display: flex;
            align-items: center;
            border: 1px solid #ccc;
            border-radius: 8px;
            overflow: hidden;
            width: 550px;
            height: 48px; /* Increased height */
            font-size: 1rem; /* Larger font */
        }

            .search-box input {
                border: none;
                outline: none;
                flex: 1;
                padding: 10px 14px;
                font-size: 1rem;
            }

            .search-box button {
                border: none;
                background-color: #ff7300;
                color: white;
                padding: 0 16px;
                height: 100%;
                font-size: 1.2rem;
                display: flex;
                align-items: center;
                justify-content: center;
            }


        .navbar-nav .nav-link i {
            margin-right: 4px;
        }

        .navbar .btn-register {
            background-color: #ff7300;
            color: white;
        }

            .navbar .btn-register:hover {
                background-color: #e46300;
                color: white;
            }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg bg-white shadow-sm py-2">
        <div class="container d-flex align-items-center justify-content-between">

            <!-- Brand -->
            <a class="navbar-brand fw-bold text-primary d-flex align-items-center" href="/">
                <i class="bi bi-box-fill fs-4 me-2"></i> BidCommerce
            </a>

            <!-- Nav + Icons -->
           

            <!-- Search -->
            <form class="search-box mx-3" role="search">
                <input type="search" placeholder="Search for anything..." aria-label="Search">
                <button type="submit"><i class="bi bi-search"></i></button>
            </form>

            <!-- Auth Buttons -->
            <div class="d-flex align-items-center gap-2">
                @if (SignInManager.IsSignedIn(User))
                {
                    <a asp-page="/Account/Manage/Index" class="btn btn-outline-primary btn-sm">Dashboard</a>
                    <form asp-page="/Account/Logout" method="post" class="d-inline">
                        <button type="submit" class="btn btn-outline-danger btn-sm">Logout</button>
                    </form>
                }
                else
                {
                    <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-outline-primary btn-sm">Login</a>
                    <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-outline-primary btn-sm">Register</a>
                }
            </div>
        </div>
    </nav>

    <!-- Main Page Body -->
    <main role="main">
        @RenderBody()
    </main>
    <style>.footer {
        background-color: #2c3e50;
        color: white;
        padding: 60px 0 30px 0;
    }

    .footer-brand {
        display: flex;
        align-items: center;
        margin-bottom: 20px;
    }

    .footer-logo {
        width: 40px;
        height: 40px;
        background: linear-gradient(45deg, #4364F7, #6FB1FC);
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-right: 12px;
    }

    .footer-brand-name {
        font-size: 1.5rem;
        font-weight: 700;
        color: white;
    }

    .footer-description {
        color: #bdc3c7;
        line-height: 1.6;
        margin-bottom: 30px;
    }

    .footer-title {
        font-size: 1.2rem;
        font-weight: 600;
        margin-bottom: 20px;
        color: white;
    }

    .footer-links {
        list-style: none;
        padding: 0;
    }

    .footer-links li {
        margin-bottom: 12px;
    }

    .footer-links a {
        color: #bdc3c7;
        text-decoration: none;
        transition: color 0.3s ease;
    }

    .footer-links a:hover {
        color: #4364F7;
    }

    .footer-bottom {
        border-top: 1px solid #34495e;
        padding-top: 30px;
        margin-top: 40px;
        text-align: center;
        color: #bdc3c7;
    }

    @@media (max-width: 991.98px) {
        .hero-title {
            font-size: 2.5rem;
            text-align: center;
        }
        
        .hero-description {
            font-size: 1.1rem;
            text-align: center;
        }
        
        .stats-card {
            margin-bottom: 15px;
        }

        .section-title {
            font-size: 2rem;
        }

        .category-card {
            margin-bottom: 20px;
        }
    }

    @@media (min-width: 992px) {
        .hero-text-col {
            display: flex;
            flex-direction: column;
            justify-content: center;
            padding-right: 2rem;
        }
    }</style>
    <!-- Footer (optional) -->
    <footer class="footer">
        <div class="container">
            <div class="row">
                <!-- Brand Column -->
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="footer-brand">
                        <div class="footer-logo">
                            <i class="bi bi-bag" style="color: white; font-size: 20px;"></i>
                        </div>
                        <span class="footer-brand-name">BidCommerce</span>
                    </div>
                    <p class="footer-description">
                        The world's largest online auction marketplace with millions of unique items.
                    </p>
                </div>

                <!-- For Buyers Column -->
                <div class="col-lg-2 col-md-6 mb-4">
                    <h5 class="footer-title">For Buyers</h5>
                    <ul class="footer-links">
                        <li><a asp-controller="Help" asp-action="HowToBid">How to Bid</a></li>
                        <li><a asp-controller="Help" asp-action="BuyerProtection">Buyer Protection</a></li>
                        <li><a asp-controller="Help" asp-action="PaymentMethods">Payment Methods</a></li>
                    </ul>
                </div>

                <!-- For Sellers Column -->
                <div class="col-lg-2 col-md-6 mb-4">
                    <h5 class="footer-title">For Sellers</h5>
                    <ul class="footer-links">
                        <li><a asp-controller="Products" asp-action="Create">Start Selling</a></li>
                        <li><a asp-controller="Seller" asp-action="Dashboard">Seller Center</a></li>
                        <li><a asp-controller="Help" asp-action="FeesAndPricing">Fees & Pricing</a></li>
                    </ul>
                </div>

                <!-- Support Column -->
                <div class="col-lg-2 col-md-6 mb-4">
                    <h5 class="footer-title">Support</h5>
                    <ul class="footer-links">
                        <li><a asp-controller="Help" asp-action="Index">Help Center</a></li>
                        <li><a asp-controller="Home" asp-action="Contact">Contact Us</a></li>
                        <li><a asp-controller="Community" asp-action="Index">Community</a></li>
                    </ul>
                </div>
            </div>

            <div class="footer-bottom">
                <p>&copy; 2024 BidCommerce. All rights reserved.</p>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
