@using Microsoft.AspNetCore.Identity
@using BidCommerce.Data
@inject SignInManager<ApplicationUser> SignInManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BidCommerce</title>

    <!-- Bootstrap + Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

    <style>
        .search-box {
            display: flex;
            align-items: center;
            border: 1px solid #ccc;
            border-radius: 8px;
            overflow: hidden;
            width: 550px;
            height: 48px; /* Increased height */
            font-size: 1rem; /* Larger font */
        }

            .search-box input {
                border: none;
                outline: none;
                flex: 1;
                padding: 10px 14px;
                font-size: 1rem;
            }

            .search-box button {
                border: none;
                background-color: #ff7300;
                color: white;
                padding: 0 16px;
                height: 100%;
                font-size: 1.2rem;
                display: flex;
                align-items: center;
                justify-content: center;
            }


        .navbar-nav .nav-link i {
            margin-right: 4px;
        }

        .navbar .btn-register {
            background-color: #ff7300;
            color: white;
        }

            .navbar .btn-register:hover {
                background-color: #e46300;
                color: white;
            }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg bg-white shadow-sm py-2">
        <div class="container d-flex align-items-center justify-content-between">

            <!-- Brand -->
            <a class="navbar-brand fw-bold text-primary d-flex align-items-center" href="/">
                <i class="bi bi-box-fill fs-4 me-2"></i> BidCommerce
            </a>

            <!-- Nav + Icons -->
           

            <!-- Search -->
            <form class="search-box mx-3" role="search">
                <input type="search" placeholder="Search for anything..." aria-label="Search">
                <button type="submit"><i class="bi bi-search"></i></button>
            </form>

            <!-- Auth Buttons -->
            <div class="d-flex align-items-center gap-2">
                @if (SignInManager.IsSignedIn(User))
                {
                    <a asp-page="/Account/Manage/Index" class="btn btn-outline-primary btn-sm">Dashboard</a>
                    <form asp-page="/Account/Logout" method="post" class="d-inline">
                        <button type="submit" class="btn btn-outline-danger btn-sm">Logout</button>
                    </form>
                }
                else
                {
                    <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-outline-primary btn-sm">Login</a>
                    <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-outline-primary btn-sm">Register</a>
                }
            </div>
        </div>
    </nav>

    <!-- Main Page Body -->
    <main role="main">
        @RenderBody()
    </main>

    <!-- Footer (optional) -->
    <footer class="bg-light text-center py-4 mt-auto border-top">
        <div class="container">
            <p class="mb-0">&copy; @DateTime.Now.Year BidCommerce. All rights reserved.</p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
