@model BidCommerce.Models.Product

@{
    ViewData["Title"] = "Create Product";
}

<h2>Create a New Product</h2>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="Title" class="form-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Description" class="form-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group form-check mb-3">
                <input asp-for="IsBiddable" class="form-check-input" id="biddableCheck" />
                <label class="form-check-label" for="biddableCheck">@Html.DisplayNameFor(m => m.IsBiddable)</label>
            </div>

            <div class="form-group mb-3" id="startingPriceGroup">
                <label asp-for="StartingPrice" class="form-label"></label>
                <input asp-for="StartingPrice" class="form-control" />
                <span asp-validation-for="StartingPrice" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="BuyNowPrice" class="form-label"></label>
                <input asp-for="BuyNowPrice" class="form-control" />
                <span asp-validation-for="BuyNowPrice" class="text-danger"></span>
            </div>

            <div class="form-group mb-3" id="bidEndTimeGroup">
                <label asp-for="BidEndTime" class="form-label"></label>
                <input asp-for="BidEndTime" type="datetime-local" class="form-control" />
                <span asp-validation-for="BidEndTime" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <label for="imageUpload" class="form-label">Upload Product Image</label>
                <input type="file" name="ImageFile" class="form-control" />
            </div>

            <button type="submit" class="btn btn-primary">Create Product</button>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index">Back to Product List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(function () {
            function toggleBidFields() {
                var isBiddable = $('#biddableCheck').is(':checked');
                $('#bidEndTimeGroup').toggle(isBiddable);
                $('#startingPriceGroup').toggle(isBiddable);
            }
            toggleBidFields();
            $('#biddableCheck').change(toggleBidFields);
        });
    </script>
}
