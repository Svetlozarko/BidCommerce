@page
@model LoginModel
@{
    ViewData["Title"] = "Log in";
    Layout = null; // Use custom layout for this page
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BidCommerce</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
    <style>
        body {
            margin: 0;
            padding: 0;
            min-height: 100vh;
            background: linear-gradient(135deg, #4f7cff 0%, #4364f7 50%, #6fb1fc 100%);
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
        }

        .login-container {
            width: 100%;
            max-width: 420px;
            padding: 20px;
        }

        .brand-header {
            text-align: center;
            margin-bottom: 40px;
        }

        .brand-logo {
            display: inline-flex;
            align-items: center;
            background: rgba(255, 255, 255, 0.15);
            padding: 12px 20px;
            border-radius: 12px;
            margin-bottom: 20px;
            backdrop-filter: blur(10px);
        }

        .logo-icon {
            width: 32px;
            height: 32px;
            background: rgba(255, 255, 255, 0.2);
            border-radius: 6px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: 10px;
        }

        .brand-name {
            color: white;
            font-size: 1.5rem;
            font-weight: 700;
            margin: 0;
        }

        .brand-tagline {
            color: rgba(255, 255, 255, 0.9);
            font-size: 1rem;
            margin: 0;
            font-weight: 400;
        }

        .login-card {
            background: white;
            border-radius: 16px;
            padding: 40px;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.1);
            margin-bottom: 30px;
        }

        .login-title {
            font-size: 1.75rem;
            font-weight: 700;
            color: #1f2937;
            text-align: center;
            margin-bottom: 8px;
        }

        .login-subtitle {
            color: #6b7280;
            text-align: center;
            margin-bottom: 30px;
            font-size: 0.95rem;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-label {
            display: block;
            font-weight: 600;
            color: #374151;
            margin-bottom: 6px;
            font-size: 0.95rem;
        }

        .form-control {
            width: 100%;
            padding: 12px 16px;
            border: 1px solid #d1d5db;
            border-radius: 8px;
            font-size: 1rem;
            transition: all 0.3s ease;
            background: #f9fafb;
        }

        .form-control:focus {
            outline: none;
            border-color: #4364f7;
            box-shadow: 0 0 0 3px rgba(67, 100, 247, 0.1);
            background: white;
        }

        .form-control::placeholder {
            color: #9ca3af;
        }

        .checkbox-container {
            display: flex;
            align-items: center;
            margin-bottom: 25px;
        }

        .form-check-input {
            margin-right: 8px;
            accent-color: #4364f7;
        }

        .checkbox-label {
            color: #6b7280;
            font-size: 0.9rem;
            margin: 0;
        }

        .btn-login {
            width: 100%;
            background: #4364f7;
            color: white;
            border: none;
            padding: 14px;
            border-radius: 8px;
            font-size: 1rem;
            font-weight: 600;
            transition: all 0.3s ease;
            margin-bottom: 20px;
        }

        .btn-login:hover {
            background: #3451e6;
            transform: translateY(-1px);
        }

        .forgot-password {
            text-align: center;
            margin-bottom: 20px;
        }

        .forgot-password a {
            color: #4364f7;
            text-decoration: none;
            font-size: 0.9rem;
        }

        .forgot-password a:hover {
            text-decoration: underline;
        }

        .divider {
            text-align: center;
            margin: 20px 0;
            color: #9ca3af;
            font-size: 0.9rem;
        }

        .btn-register {
            width: 100%;
            background: transparent;
            color: #4364f7;
            border: 1px solid #4364f7;
            padding: 12px;
            border-radius: 8px;
            font-size: 0.95rem;
            font-weight: 600;
            text-decoration: none;
            display: block;
            text-align: center;
            transition: all 0.3s ease;
            margin-bottom: 15px;
        }

        .btn-register:hover {
            background: #f0f4ff;
            color: #4364f7;
            text-decoration: none;
        }

        .resend-confirmation {
            text-align: center;
        }

        .resend-confirmation a {
            color: #6b7280;
            text-decoration: none;
            font-size: 0.85rem;
        }

        .resend-confirmation a:hover {
            color: #4364f7;
            text-decoration: underline;
        }

        .footer-text {
            text-align: center;
            color: rgba(255, 255, 255, 0.8);
            font-size: 0.9rem;
            max-width: 400px;
            line-height: 1.5;
        }

        .text-danger {
            color: #dc2626;
            font-size: 0.85rem;
            margin-top: 4px;
        }

        .validation-summary {
            background: #fef2f2;
            border: 1px solid #fecaca;
            border-radius: 6px;
            padding: 12px;
            margin-bottom: 20px;
        }

        @@media (max-width: 480px) {
            .login-container {
                padding: 15px;
            }
            
            .login-card {
                padding: 30px 25px;
            }
            
            .brand-header {
                margin-bottom: 30px;
            }
        }
    </style>
</head>
<body>
    <div class="login-container">
        <!-- Brand Header -->
        <div class="brand-header">
            <div class="brand-logo">
                <div class="logo-icon">
                    <i class="bi bi-bag" style="color: white; font-size: 16px;"></i>
                </div>
                <h1 class="brand-name">BidCommerce</h1>
            </div>
            <p class="brand-tagline">Welcome back to the world's largest auction marketplace</p>
        </div>

        <!-- Login Card -->
        <div class="login-card">
            <h2 class="login-title">Log in</h2>
            <p class="login-subtitle">Use a local account to log in.</p>

            <form id="account" method="post">
                <!-- Validation Summary -->
                <div asp-validation-summary="ModelOnly" class="text-danger validation-summary" role="alert"></div>

                <!-- Email Field -->
                <div class="form-group">
                    <label asp-for="Input.Email" class="form-label">Email</label>
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" 
                           aria-required="true" placeholder="Enter your email" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <!-- Password Field -->
                <div class="form-group">
                    <label asp-for="Input.Password" class="form-label">Password</label>
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" 
                           aria-required="true" placeholder="Enter your password" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <!-- Remember Me Checkbox -->
                <div class="checkbox-container">
                    <input class="form-check-input" asp-for="Input.RememberMe" />
                    <label asp-for="Input.RememberMe" class="checkbox-label">
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>

                <!-- Login Button -->
                <button id="login-submit" type="submit" class="btn-login">Log in</button>

                <!-- Forgot Password Link -->
                <div class="forgot-password">
                    <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                </div>

                <!-- Divider -->
                <div class="divider">or</div>

                <!-- Register Link -->
                <a class="btn-register" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">
                    Register as a new user
                </a>

                <!-- Resend Confirmation -->
                <div class="resend-confirmation">
                    <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                </div>
            </form>
        </div>

        <!-- Footer Text -->
        <p class="footer-text">
            The world's largest online auction marketplace with millions of unique items.
        </p>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>